{
    "name": "video-banner.dev",
    "description": "Sandy's HTML5 Video banner proof of concept",
    "author": "Steven Klein <steven@brkstn.com>",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "build": "npm-run-all --serial clean mkdir --parallel copy js css templates",
        "clean": "del-cli docs",
        "copy": "npm-run-all --parallel copy:**",
        "copy:img": "copy 'resources/assets/img/**/*.+(jpg|jpeg|gif|png|svg|mp4)' docs/assets/img",
        "copy:htaccess": "cp 'resources/.htaccess' docs/",
        "css": "postcss -c postcss.config.js",
        "deploy:prod": "cross-env NODE_ENV=production npm run build && project-sync prod up",
        "deploy:dev": "cross-env NODE_ENV=production npm run build && project-sync dev up",
        "mkdir": "mkdirp docs",
        "js": "rollup -c rollup.config.js",
        "postversion": "git push && git push --tags",
        "serve": "browser-sync start -c browsersync.config.js",
        "test": "cross-env NODE_ENV=production npm run build",
        "templates": "gulp",
        "templates:watch": "gulp watch",
        "watch": "npm-run-all build --parallel \"js -- --watch\" \"css -- --watch\" templates:watch serve"
    },
    "devDependencies": {
        "browser-sync": "^2.18.5",
        "copy": "^0.3.0",
        "cross-env": "^3.1.4",
        "cssnano": "^3.9.1",
        "del-cli": "^0.2.1",
        "dotenv": "^4.0.0",
        "gulp": "^3.9.0",
        "gulp-compile-handlebars": "^0.6.1",
        "gulp-htmlmin": "^3.0.0",
        "gulp-plumber": "^1.0.1",
        "gulp-rename": "^1.2.2",
        "gulp-util": "^3.0.7",
        "mkdirp": "^0.5.1",
        "npm-run-all": "^4.0.0",
        "postcss": "^5.2.8",
        "postcss-browser-reporter": "^0.5.0",
        "postcss-cli": "^2.6.0",
        "postcss-cssnext": "^2.9.0",
        "postcss-import": "^9.0.0",
        "postcss-reporter": "^3.0.0",
        "project-sync": "^1.0.0",
        "rollup": "^0.39.2",
        "rollup-plugin-buble": "^0.15.0",
        "rollup-plugin-commonjs": "^7.0.0",
        "rollup-plugin-includepaths": "^0.2.2",
        "rollup-plugin-node-resolve": "^2.0.0",
        "rollup-plugin-replace": "^1.1.1",
        "rollup-plugin-uglify": "^1.0.1",
        "rollup-watch": "^3.1.0"
    },
    "browserslist": [
        "last 2 versions"
    ],
    "dependencies": {
        "normalize-css": "^2.3.1"
    }
}
